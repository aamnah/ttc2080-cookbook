{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true, //import ".js" extensions
    "noEmit": true, // output .js files
    // "allowImportingTsExtensions": true // allows TypeScript files to import each other with a TypeScript-specific extension like .ts, .mts, or .tsx., can not work if noEmit is true

    /* Linting */
    // "strict": false,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noUncheckedSideEffectImports": true

    "outDir": "./frontend/js"
  },
  "include": ["./frontend/*", "frontend/components/sidebar.ts"]
}
